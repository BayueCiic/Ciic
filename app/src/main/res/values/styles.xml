<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="loginBgTheme" parent="MyTheme">
        <item name="android:windowBackground">@mipmap/splash768x1024new</item>
    </style>
    <style name="mainBgTheme" parent="MyTheme">
        <item name="android:windowBackground">@mipmap/denglu_bj3x</item>
    </style>
    <style name="MyDialogStyle" parent="MyTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>
    <style name="activityAnimation" parent="@android:style/Animation">
         <!--<item name="android:activityOpenEnterAnimation">@animator/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@animator/slide_right_out</item>
        <item name="android:activityCloseExitAnimation">@animator/slide_left_out</item>
--><!--
         <item name="android:activityCloseEnterAnimation">@animator/slide_right_in</item>
-->
        <item name="@android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="@android:windowExitAnimation">@anim/slide_left_out</item>
    </style>


    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_up</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popup_down</item>
        <!-- 指定消失的动画xml -->
    </style>
    <style name="MyPhotoDetails" parent="MyTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <!--直播-->
    <style name="MediaController_Text">
        <item name="android:textColor">#7fffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:thumb">@drawable/nemediacontroller_progressbar_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>

    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_enter_bg_select</item>
        <item name="android:textColor">@drawable/btn_enter_text_select</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="music_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/mix_music_btn_bg_select</item>
    </style>
    <style name="video_delete_button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_delete_btn_selector</item>
        <item name="android:textColor">@drawable/btn_enter_text_select</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="video_info_button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_enter_bg_select</item>
        <item name="android:textColor">@drawable/btn_enter_text_select</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="control_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="share_btn">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@drawable/share_type_text_selector</item>
        <item name="android:background">@drawable/share_type_bg_selector</item>
    </style>

    <style name="InputActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_activity_blue_bg</item>
        <item name="colorPrimaryDark">@color/themecolor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
    </style>

    <style name="animation_translucent_translate" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowShowAnimation">@null</item>
        <item name="android:windowHideAnimation">@null</item>
    </style>

</resources>
