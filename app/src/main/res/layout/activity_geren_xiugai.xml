<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gerenBg">
    <include layout="@layout/layout_top_title"/>
    <LinearLayout
        android:paddingLeft="110px"
        android:paddingRight="110px"
        android:paddingTop="60px"
        android:paddingBottom="60px"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:textSize="20px"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/et_xiugai_old"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:hint="请输入旧密码"
            android:textSize="20px"
            android:textColor="@color/accountText"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="新密码"
            android:textSize="20px"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/et_xiugai_new1"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:hint="请输入新密码"
            android:textSize="20px"
            android:textColor="@color/accountText"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="确认密码"
            android:textSize="20px"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/et_xiugai_new2"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:hint="请确认密码"
            android:textSize="20px"
            android:textColor="@color/accountText"
            android:inputType="number"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="60px"
            android:background="@color/themecolor"
            android:textColor="@android:color/white"
            android:text="提交"
            android:textSize="26px"/>
    </LinearLayout>
</LinearLayout>