<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_top_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_soso"
                android:gravity="center_vertical">
                <ImageView android:id="@+id/iv_soso_soso"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:background="@mipmap/sousuo_sousuo_3x"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"/>

                <EditText android:id="@+id/ed_content_soso"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="相关内容"
                    android:textColor="#666666"
                    android:textSize="24px" />

                <ImageView android:id="@+id/iv_del_soso"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:background="@mipmap/sousuo_cha_3x"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"/>
            </LinearLayout>
            <TextView  android:id="@+id/tv_soso_soso"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="搜索"
                android:textSize="28px"
                android:textColor="#999999"
                android:paddingLeft="30px"/>
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginBottom="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="#999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关内容"
                android:textColor="#999999"
                android:textSize="24px"
                android:layout_marginRight="45px"
                android:layout_marginLeft="45px"/>
            <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="#999999"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_soso"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>





</LinearLayout>