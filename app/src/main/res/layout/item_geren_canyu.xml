<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="3px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="15px"
        android:paddingBottom="15px">
        <RelativeLayout android:id="@+id/rl_canyu_title"
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_weight="2">
            <ImageView android:id="@+id/iv_canyu_selected"
                android:layout_width="26px"
                android:layout_height="26px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@mipmap/checkbox_3x"/>
            <TextView android:id="@+id/tv_canyu_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_canyu_selected"
                android:layout_marginLeft="15px"
                android:textColor="@android:color/black"
                android:textSize="18px"
                android:text="这里是画册标题，这里是..."
                android:singleLine="true"/>
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gerenTextcolor"/>
        <TextView  android:id="@+id/tv_canyu_writer"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gerenTextcolor"
            android:textSize="18px"
            android:text="中智-管理员"
            android:singleLine="true"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gerenTextcolor"/>
        <TextView android:id="@+id/tv_canyu_time"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gerenTextcolor"
            android:textSize="18px"
            android:text="2017-06-07"
            android:singleLine="true"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gerenTextcolor"/>
        <TextView android:id="@+id/tv_canyu_state"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18px"
            android:text="进行中..."
            android:singleLine="true"/>
    </LinearLayout>


</LinearLayout>