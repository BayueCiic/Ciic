<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="611px"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业注册"
            android:textSize="26px"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0px"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/greyHorizontal"
            android:layout_marginTop="30px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accountText"
            android:textSize="20px"
            android:text="邮箱"
            android:layout_marginTop="27px"/>
        <EditText android:id="@+id/et_company_mail"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:hint="请输入公司邮箱"
            android:textSize="20px"
            android:textColor="@color/accountText"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accountText"
            android:textSize="20px"
            android:text="验证码"
            android:layout_marginTop="10px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:orientation="horizontal">
            <EditText  android:id="@+id/et_company_yanzheng"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="20px"
                android:textColor="@color/accountText"/>
            <View
                android:layout_width="2px"
                android:layout_height="22px"
                android:layout_gravity="center_vertical"
                android:background="@color/themecolor"/>
            <TextView android:id="@+id/tv_company_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="发送验证码"
                android:textSize="20px"
                android:textColor="@color/themecolor"
                android:layout_marginLeft="15px"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accountText"
            android:textSize="20px"
            android:text="公司全称"
            android:layout_marginTop="10px"/>
        <EditText  android:id="@+id/et_company_name"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:hint="请输入公司全称"
            android:textSize="20px"
            android:textColor="@color/accountText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accountText"
            android:textSize="20px"
            android:text="公司简称"
            android:layout_marginTop="10px"/>
        <EditText   android:id="@+id/et_company_shorname"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:hint="请输入公司简称"
            android:textSize="20px"
            android:textColor="@color/accountText"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="公司地址"
            android:textColor="@color/accountText"
            android:textSize="20px" />

        <EditText   android:id="@+id/et_company_address"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:hint="请输入公司地址"
            android:textSize="20px"
            android:textColor="@color/accountText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="设置密码"
            android:textColor="@color/accountText"
            android:textSize="20px" />

        <EditText   android:id="@+id/et_company_prassword"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:textSize="20px"
            android:textColor="@color/accountText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="确认密码"
            android:textColor="@color/accountText"
            android:textSize="20px" />

        <EditText android:id="@+id/et_company_prassword2"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:layout_marginTop="9px"
            android:background="@drawable/account_bg"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:hint="请确认密码"
            android:inputType="numberPassword"
            android:textSize="20px"
            android:textColor="@color/accountText"/>

        <Button android:id="@+id/but_company_zhuce"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:text="注册"
            android:layout_marginTop="29px"
            android:textColor="@android:color/white"
            android:background="@color/themecolor"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/greyHorizontal"
            android:layout_marginTop="30px"/>

        <TextView android:id="@+id/et_company_backlogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20px"
            android:gravity="center"
            android:textColor="@color/themecolor"
            android:text="@string/goBack"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>