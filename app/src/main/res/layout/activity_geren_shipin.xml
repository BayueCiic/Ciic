<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_top_title"/>
    <LinearLayout
        android:id="@+id/ll_daohang"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_shipin_platfrom"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="平台"
            android:textColor="@color/themecolor"
            android:textSize="26px"
            android:background="@drawable/geren_newstitle_bg"/>
        <TextView
            android:id="@+id/tv_shipin_company"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="企业"
            android:textColor="@color/h99"
            android:textSize="26px"
            android:background="@color/itemtitlecolor"/>

    </LinearLayout>

    <LinearLayout
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:orientation="vertical"
            android:background="@color/gerenBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57px"
                android:gravity="center_vertical"
                android:background="@color/itemtitlecolor">
                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="视频封面"
                    android:textSize="22px"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="视频标题"
                    android:textSize="22px"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="发布者"
                    android:textSize="22px"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="上传时间"
                    android:textSize="22px"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <com.androidkun.PullToRefreshRecyclerView
                android:id="@+id/rlv_shipin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.androidkun.PullToRefreshRecyclerView>


        </LinearLayout>


</LinearLayout>