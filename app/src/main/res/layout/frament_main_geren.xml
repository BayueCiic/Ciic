<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_top_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="227px"
                android:padding="30px"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0px"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="30px"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <ImageView android:id="@+id/iv_geren_toux"
                            android:layout_width="127px"
                            android:layout_height="127px"
                            android:src="@mipmap/bianjiziliao_toux2_3x"/>
                        <TextView
                            android:id="@+id/tv_geren_toux"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="中智—管理员"
                            android:textSize="20px"
                            android:textColor="@color/accountText"/>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/gerenTextcolor"/>

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginBottom="20px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="所属公司："
                                android:textColor="@color/accountText"
                                android:textSize="20px"/>
                            <TextView
                                android:id="@+id/tv_geren_companyname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上海中智"
                                android:textColor="@color/gerenTextcolor"
                                android:textSize="20px"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="公司简称："
                                android:textColor="@color/accountText"
                                android:textSize="20px"/>
                            <TextView
                                android:id="@+id/tv_geren_mininame"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="中智"
                                android:textColor="@color/gerenTextcolor"
                                android:textSize="20px"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@color/gerenBg"
                android:paddingLeft="29px"
                android:paddingTop="19px"
                android:paddingRight="29px"
                android:paddingBottom="19px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_geren_huodong"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_marginRight="20px"
                        android:layout_height="150px"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/geren_guanli_bg">
                        <ImageView
                            android:layout_width="37px"
                            android:layout_height="38px"
                            android:src="@mipmap/gerenzhongx_huodong_3x"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="活动管理"
                            android:textColor="@color/themecolor"
                            android:textSize="20px"
                            android:layout_marginTop="20px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_geren_xinwen"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="150px"
                        android:layout_marginRight="20px"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/geren_guanli_bg">
                        <ImageView
                            android:layout_width="41px"
                            android:layout_height="35px"
                            android:src="@mipmap/gerenzhongx_xinwen_3x"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新闻管理"
                            android:textColor="@color/themecolor"
                            android:textSize="20px"
                            android:layout_marginTop="20px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_geren_shipin"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="150px"
                        android:gravity="center"
                        android:layout_marginRight="20px"
                        android:orientation="vertical"
                        android:background="@drawable/geren_guanli_bg">
                        <ImageView
                            android:layout_width="37px"
                            android:layout_height="37px"
                            android:src="@mipmap/gerenzhongx_shiping_3x"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="视频管理"
                            android:textColor="@color/themecolor"
                            android:textSize="20px"
                            android:layout_marginTop="20px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_geren_zhibo"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="150px"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/geren_guanli_bg">
                        <ImageView
                            android:layout_width="48px"
                            android:layout_height="35px"
                            android:src="@mipmap/gerenzhongx_zhibo_3x"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="直播管理"
                            android:textColor="@color/themecolor"
                            android:textSize="20px"
                            android:layout_marginTop="20px"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_geren_jingcai"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_marginRight="20px"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/geren_guanli_bg">
                        <ImageView
                            android:layout_width="37px"
                            android:layout_height="36px"
                            android:src="@mipmap/gerenzhongx_jingcai_3x"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="精彩瞬间"
                            android:textColor="@color/themecolor"
                            android:textSize="20px"
                            android:layout_marginTop="20px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_geren_canyu"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="20px"
                        android:orientation="vertical"
                        android:background="@drawable/geren_guanli_bg">
                        <ImageView
                            android:layout_width="41px"
                            android:layout_height="41px"
                            android:src="@mipmap/gerenzhongx_canyu_3x"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="参与的活动"
                            android:textColor="@color/themecolor"
                            android:textSize="20px"
                            android:layout_marginTop="20px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_geren_shoucang"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="20px"
                        android:orientation="vertical"
                        android:background="@drawable/geren_guanli_bg">
                        <ImageView
                            android:layout_width="41px"
                            android:layout_height="37px"
                            android:src="@mipmap/gerenzhongx_shoucang_3x"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的收藏"
                            android:textColor="@color/themecolor"
                            android:textSize="20px"
                            android:layout_marginTop="20px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_geren_tousu"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/geren_guanli_bg">
                        <ImageView
                            android:layout_width="46px"
                            android:layout_height="39px"
                            android:src="@mipmap/gerenzhongx_tousu_3x"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投诉建议"
                            android:textColor="@color/themecolor"
                            android:textSize="20px"
                            android:layout_marginTop="20px"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="265px"
                    android:layout_marginTop="18px"
                    android:paddingLeft="35px"
                    android:paddingRight="35px"
                    android:paddingBottom="5px"
                    android:paddingTop="4px"
                    android:orientation="vertical"
                    android:background="@drawable/geren_guanyu_bg">
                    <RelativeLayout
                        android:id="@+id/rl_geren_xx"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="官方消息"
                            android:textSize="20px"
                            android:textColor="@color/gerenTextcolor"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>
                        <ImageView
                            android:layout_width="11px"
                            android:layout_height="20px"
                            android:src="@mipmap/gerenzhongx_jiantou3x"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gerenTextcolor"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_geren_guanyu"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关于我们"
                            android:textSize="20px"
                            android:textColor="@color/gerenTextcolor"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>
                        <ImageView
                            android:layout_width="11px"
                            android:layout_height="20px"
                            android:src="@mipmap/gerenzhongx_jiantou3x"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gerenTextcolor"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_geren_lianxi"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系我们"
                            android:textSize="20px"
                            android:textColor="@color/gerenTextcolor"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>
                        <ImageView
                            android:layout_width="11px"
                            android:layout_height="20px"
                            android:src="@mipmap/gerenzhongx_jiantou3x"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:visibility="invisible"
                            android:background="@color/gerenTextcolor"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_geren_xiugai"
                    android:layout_width="match_parent"
                    android:layout_height="89px"
                    android:paddingLeft="35px"
                    android:paddingRight="35px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/geren_guanyu_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改密码"
                        android:textSize="20px"
                        android:textColor="@color/gerenTextcolor"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                    <ImageView
                        android:layout_width="11px"
                        android:layout_height="20px"
                        android:src="@mipmap/gerenzhongx_jiantou3x"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_geren_tuichu"
                    android:layout_width="match_parent"
                    android:layout_height="89px"
                    android:paddingLeft="35px"
                    android:paddingRight="35px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/geren_guanyu_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出登录"
                        android:textSize="20px"
                        android:textColor="@color/gerenTextcolor"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>




</LinearLayout>