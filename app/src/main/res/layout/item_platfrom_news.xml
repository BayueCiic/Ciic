<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51px"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/civ_dian"
                android:layout_width="15px"
                android:layout_height="15px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:background="@color/themecolor" />

            <TextView android:id="@+id/tv_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@id/civ_dian"
                android:text="这里是活动的标题"
                android:textColor="#5F5F5F"
                android:textSize="24px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"

            android:paddingBottom="8px"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="20px"
                android:background="@color/greyHorizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="191px"
                android:layout_marginBottom="29px"
                android:orientation="horizontal">

                <ImageView android:id="@+id/iv_news_img"
                    android:layout_width="201px"
                    android:layout_height="match_parent"
                    android:background="#F2F2F2" />

                <TextView android:id="@+id/tv_news_txt"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:lines="3"
                    android:paddingBottom="20px"
                    android:paddingTop="20px"
                    android:text="这里是活动的内容，这里是活动的内容，这里是活动的内容，这里是活动的内容，这里是活动的内容，这里是活动的内容.."
                    android:textColor="#818181"
                    android:textSize="20px" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/greyHorizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginTop="22px"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2017-05-05"
                    android:textColor="#5F5F5F"
                    android:textSize="18px" />

                <TextView  android:id="@+id/tv_news_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@+id/tv_news_time"
                    android:text="中智-管理员"
                    android:textColor="#5F5F5F"
                    android:textSize="18px" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>