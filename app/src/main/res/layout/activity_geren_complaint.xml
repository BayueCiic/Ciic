<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gerenBg">
    <include layout="@layout/layout_top_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30px"
        android:paddingTop="30px"
        android:paddingRight="30px"
        android:paddingBottom="60px"
        android:orientation="vertical"
        android:background="@android:color/white">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="413px"
            android:padding="30px"
            android:background="@drawable/account_bg">
            <EditText android:id="@+id/et_complaint_txt"
                android:layout_width="match_parent"
                android:layout_height="233px"
                android:gravity="start"
                android:hint="请在此描述您的投诉或建议…"
                android:textSize="20px"
                android:textColor="@color/gerenTextcolor"
                android:background="@android:color/transparent"/>
            <TextView android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（限字200）"
                android:textSize="20px"
                android:textColor="@color/gerenTextcolor"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/et_complaint_txt"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/gerenTextcolor"
                android:layout_below="@+id/text"
                android:layout_marginTop="19px"/>
            
            
        </RelativeLayout>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:background="@color/themecolor"
            android:layout_marginTop="59px"
            android:text="提交"
            android:textSize="26px"
            android:textColor="@android:color/white"/>



    </LinearLayout>




</LinearLayout>