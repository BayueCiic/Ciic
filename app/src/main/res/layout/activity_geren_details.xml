<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gerenBg">
    <include layout="@layout/layout_top_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="20px">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57px"
                android:layout_marginTop="20px"
                android:background="@color/itemtitlecolor"
                android:orientation="horizontal"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="主题"
                    android:textColor="@android:color/black"
                    android:textSize="22px" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="9" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="@android:color/black"
                    android:textSize="22px" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="0px"
                android:paddingRight="30px"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="2px"
                android:background="@android:color/white">

                <LinearLayout android:id="@+id/ll_xx_selected"
                    android:layout_width="0px"
                    android:paddingLeft="0px"
                    android:paddingRight="0px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1.5">
                    <ImageView android:id="@+id/iv_xx_selected"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:src="@mipmap/checkbox_3x"
                        android:visibility="invisible"/>
                </LinearLayout>
                <TextView android:id="@+id/tv_details_name"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:text="这是一条官方信息"
                    android:textColor="@android:color/black"
                    android:textSize="22px"
                    android:singleLine="true"
                    android:layout_weight="12"/>
                <TextView android:id="@+id/tv_details_time"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2017-06-07"
                    android:textColor="@color/gerenTextcolor"
                    android:textSize="18px"
                    android:layout_weight="3"/>
            </LinearLayout>
            <TextView  android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px"
                android:layout_marginTop="2px"
                android:background="@android:color/white"
                android:textSize="22px"
                android:textColor="@android:color/black"
                android:text="       详情详情详情详情详情详情详情详情详情详情详情详情详情详情详情详情详情详情详情详情详情"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>